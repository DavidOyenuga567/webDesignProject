<main>
        <section class="signup-section">
            <form class="signup-form" action="submission" method="get">
                <h1 class="pageTitle">Sign Up</h1>
                <p class="centertext">Please fill in this form to join the Man United Fan Community.</p>
                
                <div class="form-group">
                  <label for="Name">Name</label>
                  <input type="userName" id="userName" placeholder="Enter Email" name="userName" required>
              </div>

                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="userEmail" id="userEmail" placeholder="Enter Email" name="userEmail" required>
              </div>
          
              <div class="form-group">
                  <label for="psw">Password</label>
                  <input type="password" id="userPassword" placeholder="Enter Password" name="userPassword" value="" pattern=".{6,}" title="Password must be 6 or more characters long" required>
              </div>

                <label>
                    <input type="checkbox" checked name="remember"> Remember me
                </label>
            
                <p>By creating an account you agree to our <a href="http://foo.com" style="color:dodgerblue">Terms & Privacy</a>.</p>
            
                <div class="clearfix">
                    <button type="submit" class="signupbtn">Sign Up</button>
                    <button type="button" class="cancelbtn">Cancel</button>
                </div>
            </form>
        </section>
    </main>
<script src="/js/signup.js"></script>
<script src="/js/login.js"></script>